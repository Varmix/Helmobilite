@model List<DeliveryModel>

@if (Model.Count == 0)
{
    <div class="d-flex align-items-center justify-content-center h-100 flex-column">
        <p class="fs-3">
            <span class="text-warning fw-bold fs-5">Oops!</span>
        </p>
        @if (ViewBag.Status.Equals("waiting"))
        {
            <p class="lead mb-5">
                Il semblerait que vous n'ayez pas de livraison en attente...
            </p>
        }
        else if (ViewBag.Status.Equals("inProgress"))
        {
            <p class="lead mb-5">
                Il semblerait que vous n'ayez pas de livraison en cours...
            </p>
        }
        else if (ViewBag.Status.Equals("finished"))
        {
            <p class="lead mb-5">
                Il semblerait que vous n'ayez pas de livraison en terminée...
            </p>
        }


        <a class="btn btn-warning fw-bold" asp-area="" asp-controller="Client" asp-action="CreateDelivery">Encoder livraison</a>
    </div>
}
else
{
    <div class="h-100 vw-100 p-5">
        @if (ViewBag.Status.Equals("waiting"))
        {
            <h1 class="fw-bold mb-5">Demandes de livraison en attente</h1>
        }
        else if (ViewBag.Status.Equals("inProgress"))
        {
            <h1 class="fw-bold mb-5">Livraison en cours</h1>
        }
        else if (ViewBag.Status.Equals("finished"))
        {
            <h1 class="fw-bold mb-5">Historique des livraisons</h1>
        }

        @if (ViewData["ErrorIdDelivery"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorIdDelivery"]
            </div>
        }
        <table class="table table-striped table-bordered border-5">
            <thead class="bg-warning">
            <tr>
                <th scope="col">
                    <i class="fa-solid fa-hashtag"></i>
                </th>
                <th scope="col"><i class="fa-solid fa-location-dot"></i> Lieu de chargement</th>
                <th scope="col"><i class="fa-solid fa-location-dot"></i> Lieu de déchargement</th>
                <th scope="col"><i class="fa-solid fa-box"></i> Contenu</th>
                <th scope="col"><i class="fa-solid fa-calendar-days"></i> Date/Heure de chargement</th>
                <th scope="col"><i class="fa-solid fa-calendar-days"></i> Date/Heure déchargement espéré</th>
                @if (ViewBag.Status.Equals("waiting"))
                {
                    <th scope="col"><i class="fa-solid fa-list-ul"></i> Modifier</th>
                }
                 @if (ViewBag.Status.Equals("finished"))
                {
                    <th scope="col"><i class="far fa-comment"></i> Commentaire</th>
                }
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@Html.DisplayFor(modelItem => item.PlaceLoadingDelivery)</td>
                    <td>@Html.DisplayFor(modelItem => item.PlaceUnLoadingDeliver)</td>
                    <td>@Html.DisplayFor(modelItem => item.Content)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateAndTimeOfLoading)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateAndTimeOfUnLoading)</td>
                    @if (ViewBag.Status.Equals("waiting"))
                    {
                        <form method="post" form asp-controller="Client" asp-action="EditDelivery">
                            <input type="hidden" name="deliveryId" value="@item.IdDelivery"/>
                            <td class="text-center">
                                <button type="submit">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            </td>
                        </form>
                    }
                      @if (ViewBag.Status.Equals("finished"))
                    {
                        <th scope="col" class="text-wrap fw-normal">
                        @if (item.IsSucces)
                        {
                            @:<span class="fw-bold">Livraison terminée :</span> @Html.DisplayFor(modelItem => item.Comment)
                        }
                        else
                        {
                            @:<span class="fw-bold" style="color: red">Livraison non terminée :</span> @Html.DisplayFor(modelItem => item.Comment)
                        }
                        </th>
                    }
                </tr>
            }
            </tbody>
        </table>
    </div>
}