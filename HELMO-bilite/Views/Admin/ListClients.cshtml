@model List<Client>


@if (Model.Count == 0)
    {
        <div class="d-flex align-items-center justify-content-center h-100 flex-column">
            <p class="fs-3"> <span class="text-warning fw-bold fs-5">Opps!</span></p>
            <p class="lead mb-5">
                Il semblerait que vous n'ayez pas de clients ayant effectué une livraison pour le moment...
            </p>
        </div>
    }
    else
    {
        <div class="h-100 vw-100 p-5">
            <h1 class="fw-bold mb-5">Clients</h1>
           @if (TempData["ErrorMessage"] != null)
           {
               <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
           }
           
           @if (TempData["SuccessMessage"] != null)
           {
               <div class="alert alert-success">@TempData["SuccessMessage"]</div>
           }
            
           <table class="table table-striped table-bordered border-5">
                <thead class="bg-warning">
                <tr>
                    <th scope="col"><i class="fas fa-hashtag"></i> Numéro client</th>
                    <th scope="col"><i class="fas fa-building"></i> Nom de la companie</th>
                    <th scope="col"><i class="fas fa-map-marker-alt"></i> Adresse </th>
                    <th scope="col"><i class="fa-solid fa-list-ul"></i> Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => client.ClientCompany.NumberCompany)</th>
                        <td>@Html.DisplayFor(modelItem => client.ClientCompany.CompanyName)</td>
                        <td>@Html.DisplayFor(modelItem => client.ClientCompany.CompanyAdress.Street), @Html.DisplayFor(modelItem => client.ClientCompany.CompanyAdress.Locality), @Html.DisplayFor(modelItem => client.ClientCompany.CompanyAdress.Coutry)</td>
                        
                        @if (client.IsBadPayer)
                        {
                            <td class="text-center fw-bold">Est mauvais payeur</td>
                        }
                        else
                        {
                            <form method="post" form asp-controller="Admin" asp-action="ProcessBadClient">
                                <input type="hidden" name="clientId" value="@client.Id"/>
                                <td class="text-center"><button type="submit" class="btn btn-warning fw-bold">Mauvais payeur</button></td>
                            </form>
                        }
                    </tr>  
                }
                </tbody>
            </table>
        </div>
    }