@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<HELMO_bilite.Models.ViewModels.AssignDriverViewModel>

 @if (Model.Count == 0)
    {
        <div class="d-flex align-items-center justify-content-center h-100 flex-column">
            <p class="fs-3"> <span class="text-warning fw-bold fs-5">Oops!</span></p>
            <p class="lead mb-5">
                Il semblerait que vous n'ayez pas de livraison en attente...
            </p>
        </div>
    }
    else
    {
        <div class="h-100 vw-100 p-5">
            <h1 class="fw-bold mb-5">Assignation des livraisons</h1>
           @if (TempData["ErrorMessage"] != null)
           {
               <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
           }
           
           @if (TempData["SuccessMessage"] != null)
           {
               <div class="alert alert-success">@TempData["SuccessMessage"]</div>
           }
            
           <table class="table table-striped table-bordered border-5">
                <thead class="bg-warning">
                <tr>
                    <th scope="col"><i class="fa-solid fa-hashtag"></i></th>
                    <th scope="col"><i class="fa-solid fa-location-dot"></i> Lieu de chargement</th>
                    <th scope="col"><i class="fa-solid fa-location-dot"></i> Lieu de déchargement</th>
                    <th scope="col"><i class="fa-solid fa-box"></i> Contenu</th>
                    <th scope="col"><i class="fa-solid fa-calendar-days"></i> Date/Heure de chargement</th>
                    <th scope="col"><i class="fa-solid fa-calendar-days"></i> Date/Heure déchargement espéré</th>
                    <th scope="col"><i class="fas fa-user"></i> Chauffeur</th>
                    <th scope="col"><i class="fas fa-truck"></i> Camion</th>
                    <th scope="col" class="text-center align-middle"><i class="fa-solid fa-check fa-lg"></i></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                   <tr @if (item.DeliveryPending.LinkedClient.IsBadPayer) { <text>style="background-color: #d62828;"</text> }>
                        <th scope="row">@Html.DisplayFor(modelItem => item.DeliveryPending.IdDelivery)</th>
                        <td>@Html.DisplayFor(modelItem => item.DeliveryPending.PlaceLoadingDelivery)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeliveryPending.PlaceUnLoadingDeliver)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeliveryPending.Content)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeliveryPending.DateAndTimeOfLoading)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeliveryPending.DateAndTimeOfUnLoading)</td>
                        
                    <form  method="post" form asp-controller="Dispatcher" asp-action="ProcessAssignDelivery">
                        <td class="text-center align-middle">
                            <select name="truckDrivers">
                                 @foreach (var availableTruckDriver in item.AvailableDrivers)
                                 {
                                     <option value="@availableTruckDriver.Id">@availableTruckDriver.LastName  @availableTruckDriver.FirstName (@availableTruckDriver.Permis)</option>
                                 }
                            </select>
                        </td>
                        <td class="text-center align-middle">
                            <select name="trucks">
                                @foreach (var availableTruck in item.AvailableTrucks)
                                {
                                    <option value="@availableTruck.IdTruck">@availableTruck.Brand : @availableTruck.Model (@availableTruck.RequiredDrivingLiscence)</option>
                                }
                            </select>
                        </td>
                        
                        @if (item.DeliveryPending.LinkedClient.IsBadPayer)
                        {
                            <td class="text-center fw-bold">Non assignable</td>
                        }
                        else if (item.DeliveryPending.IsFinish && !item.DeliveryPending.IsSucces)
                        {
                            <td class="text-danger text-center fw-bold">@Html.DisplayFor(modelItem => item.DeliveryPending.Comment)</td>
                        }
                        else
                        {
                            <td class="text-center"><button type="submit" class="btn btn-warning fw-bold">Confirmer</button></td>
                            <input type="hidden" name="deliveryId" value="@item.DeliveryPending.IdDelivery"/>
                        }
                    </form>
                    </tr>  
                }
                </tbody>
            </table>
        </div>
    }