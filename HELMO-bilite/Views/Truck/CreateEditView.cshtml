@model HELMO_bilite.Models.ViewModels.TruckViewModel

@{
    var isEditMode = Model.Truck.IdTruck > 0;
    ViewData["Title"] = isEditMode ? "Modifier le camion" : "Créer un nouveau camion";
    var actionText = isEditMode ? "Mettre à jour" : "Enregistrer";
    var formAction = isEditMode ? "Edit" : "Create";
}


<div class="container mt-3">
    <div class="row">
        <div class="col-12 text-center mb-3">
            <h3>@ViewData["Title"]</h3>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>
</div>
<div class="h-500 vw-100 d-flex justify-content-center align-items-center flex-column mb-3">
    <div class="w-50 form-shadow rounded">
        <div class="w-100 d-flex justify-content-center align-items-center flex-column">
            <form id="truck-form" asp-controller="Truck" asp-action="@formAction" method="post" enctype="multipart/form-data" class="w-75 mb-2">
                <input type="hidden" asp-for="@Model.Truck.IdTruck"/>
                <input type="hidden" asp-for="@Model.Truck.PictureTruckPath"/>
                <div class="mb-5 d-flex flex-column justify-content-center align-items-center">
                    <div class="form-group mb-5">
                        <img id="previewImage" src="@Url.Content(Model.Truck.PictureTruckPath)" alt="Aperçu de l'image du camion" style="width:250px; height: 250px; border-radius: 50%; object-fit:cover;">
                    </div>
                    <div class="form-group">
                        <label for="inputFile" role="button">
                            <i class="fa-solid fa-pen fa-1.5x"></i>
                        </label>
                        <input asp-for="@Model.UploadedImage" type="file" class="form-control-file d-none" id="inputFile" accept="image/*">
                         <span asp-validation-for="UploadedImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-5">
                    <label asp-for="@Model.Truck.Brand" class="form-label fw-bold"><i class="fa-solid fa-truck"></i> Marque</label>
                    <select asp-for="@Model.Truck.Brand" type="text" class="input-border form-select" required>
                        <option value="SCANIA">Sczania</option>
                        <option value="RENAULT">Renault</option>
                        <option value="VOLVO">Volvo</option>
                        <option value="IVECO">Iveco</option>
                        <option value="MAN">Man</option>
                        <option value="MERCEDES">Mercedes</option>
                        <option value="DAF">Daf</option>
                        <option value="PETERBILT">Peterbilt</option>
                        <option value="KENWORTH">Kenworth</option>
                        <option value="MACK">Lack</option>
                    </select>
                    <span asp-validation-for="Truck.Brand" class="text-danger"></span>
                </div>

                <div class="form-group mb-5">
                    <label asp-for="@Model.Truck.Model" class="form-label fw-bold"><i class="fas fa-book"></i> Modèle</label>
                    <input asp-for="@Model.Truck.Model" type="text" class="input-border form-control" placeholder="R730" required>
                    <span asp-validation-for="Truck.Model" class="text-danger"></span>
                </div>

                <div class="form-group mb-5">
                    <label asp-for="@Model.Truck.NumberPlate" class="form-label fw-bold"><i class="far fa-file-alt"></i> Plaque d'immatriculation</label>
                    <input asp-for="@Model.Truck.NumberPlate" type="text" class="input-border form-control" placeholder="1-ABC-123" required>
                    <span asp-validation-for="@Model.Truck.NumberPlate" class="text-danger"></span>
                    <span asp-validation-for="Truck.NumberPlate" class="text-danger"></span>
                </div>

                <div class="form-group mb-5">
                    <label asp-for="@Model.Truck.RequiredDrivingLiscence" class="form-label fw-bold"><i class="fa-solid fa-id-card"></i> Type de permis requis (C ou CE)</label>
                    <select asp-for="@Model.Truck.RequiredDrivingLiscence" class="input-border form-select" required>
                        <option value="C">C</option>
                        <option value="CE">CE</option>
                    </select>
                    <span asp-validation-for="Truck.RequiredDrivingLiscence" class="text-danger"></span>
                </div>

                <div class="form-group mb-5">
                    <label asp-for="@Model.Truck.MaximumTonnage" class="form-label fw-bold"><i class="fa-solid fa-weight"></i> Tonnage maximum</label>
                    <input asp-for="@Model.Truck.MaximumTonnage" type="number" class="input-border form-control" placeholder="12" required>
                    <span asp-validation-for="Truck.MaximumTonnage" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center align-items-center mb-3">
                    <button type="submit" class="btn btn-warning fw-bold">
                        <i class="fas fa-save"></i> @actionText
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>