@page
@model LoginModel


<h1>@ViewData["Title"]</h1>
<div class="h-100 vw-100 d-flex justify-content-center align-items-center flex-column">
    <div class="w-50 form-shadow rounded">
        <h2 class="m-5 text-center text-warning fw-bold">Connexion</h2>

        <div class="w-100 d-flex justify-content-center align-items-center flex-column">
            <form id="account" method="post" class="w-75 mb-2">
                <div class="form-group mb-5">
                    <label asp-for="Input.Email" class="form-label fw-bold"><i class="fa-solid fa-envelope"></i> Adresse email</label>
                    <input asp-for="Input.Email" type="email" class="input-border form-control" aria-describedby="emailHelp" placeholder="john.doe@gmail.com" autocomplete="username" aria-required="true"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>


                <div class="form-group mb-5">
                    <label asp-for="Input.Password" class="form-label fw-bold"><i class="fa-solid fa-key"></i> Mot de passe</label>
                    <input asp-for="Input.Password" type="password" class="input-border form-control" placeholder="●●●●●●●●●●●●"  autocomplete="current-password" aria-required="true"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex justify-content-center align-items-center mb-3">
                    <button id="login-submit" type="submit" class="btn btn-warning fw-bold">Se connecter</button>
                </div>
            </form>
            <p class="m-0 text-center">Vous n'avez pas encore de compte ?</p>
            <a class="btn text-center text-warning fw-bold mb-5" id="registerPopUp">Inscription</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}